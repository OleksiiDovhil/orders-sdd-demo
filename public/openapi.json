{
    "openapi": "3.1.0",
    "paths": {
        "/api/orders/{uniqueOrderNumber}/complete": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Check order payment completion status",
                "description": "Checks whether an order has been paid. For individual contractors, the payment status is stored in the database. For legal entities, the payment status is checked via a payment microservice.",
                "operationId": "dc336f3ae12f28c29a2f0aa9498c4125",
                "requestBody": {
                    "description": "Check order completion status request",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckOrderCompletionRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order payment status retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "isPaid": {
                                            "description": "Whether the order has been paid",
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "description": "Status message",
                                            "type": "string",
                                            "example": "Order has been paid successfully. Thank you for your purchase!"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request - validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "description": "Validation errors",
                                            "properties": {
                                                "uniqueOrderNumber": {
                                                    "type": "string",
                                                    "example": "Unique order number must be in format YYYY-MM-NNNNN (e.g., 2020-09-12345)"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Order not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Order not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal server error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/orders": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Get recent orders",
                "description": "Returns the specified number of most recent orders, ordered by creation date (most recent first).",
                "operationId": "09cfb5729d4ac32ffc8ef8deda810aa5",
                "requestBody": {
                    "description": "Order creation data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/GetRecentOrdersRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Recent orders retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "uniqueOrderNumber": {
                                                "description": "Unique order number in format YYYY-MM-NNNNN",
                                                "type": "string",
                                                "example": "2025-11-1"
                                            },
                                            "sum": {
                                                "description": "Total order amount in cents",
                                                "type": "integer",
                                                "example": 1000
                                            },
                                            "contractorType": {
                                                "description": "Contractor type: 1 = individual, 2 = legal entity",
                                                "type": "integer",
                                                "enum": [
                                                    1,
                                                    2
                                                ],
                                                "example": 1
                                            },
                                            "items": {
                                                "description": "Order items",
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "productId": {
                                                            "description": "Product ID",
                                                            "type": "integer",
                                                            "example": 123
                                                        },
                                                        "price": {
                                                            "description": "Price per unit in cents",
                                                            "type": "integer",
                                                            "example": 500
                                                        },
                                                        "quantity": {
                                                            "description": "Quantity",
                                                            "type": "integer",
                                                            "example": 2
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request - validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "description": "Validation errors",
                                            "properties": {
                                                "limit": {
                                                    "type": "string",
                                                    "example": "Limit is required"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal server error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Create a new order",
                "description": "Creates a new order with the provided items. The system generates a unique order number in the format {year}-{month}-{sequentialOrderNumber} and returns a redirect URL based on the contractor type.",
                "operationId": "3279ed4ecc60f8fbb749fed066b5d6db",
                "requestBody": {
                    "description": "Order creation data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrderRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "uniqueOrderNumber": {
                                            "description": "Unique order number in format {year}-{month}-{sequentialOrderNumber}",
                                            "type": "string",
                                            "example": "2025-11-1"
                                        },
                                        "redirectUrl": {
                                            "description": "Redirect URL for payment. For individuals: /pay/{uniqueOrderNumber}, for legal entities: /orders/{uniqueOrderNumber}/bill",
                                            "type": "string",
                                            "example": "http://some-pay-agregator.com/pay/2025-11-1"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request - validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Missing required fields: sum, contractorType, items"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal server error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CheckOrderCompletionRequest": {
                "description": "Request parameters for checking order completion status",
                "required": [
                    "uniqueOrderNumber"
                ],
                "properties": {
                    "uniqueOrderNumber": {
                        "description": "Unique order number in format YYYY-MM-NNNNN",
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}-\\d+$",
                        "example": "2025-11-12345"
                    }
                },
                "type": "object"
            },
            "OrderItem": {
                "description": "An item within an order",
                "required": [
                    "productId",
                    "price",
                    "quantity"
                ],
                "properties": {
                    "productId": {
                        "description": "Product identifier",
                        "type": "integer",
                        "example": 1
                    },
                    "price": {
                        "description": "Product price in cents",
                        "type": "integer",
                        "example": 1000
                    },
                    "quantity": {
                        "description": "Product quantity",
                        "type": "integer",
                        "minimum": 1,
                        "example": 1
                    }
                },
                "type": "object"
            },
            "CreateOrderRequest": {
                "description": "Request body for creating a new order",
                "required": [
                    "sum",
                    "contractorType",
                    "items"
                ],
                "properties": {
                    "sum": {
                        "description": "Total order amount in cents",
                        "type": "integer",
                        "example": 1000
                    },
                    "contractorType": {
                        "description": "Contractor type: 1 = individual, 2 = legal entity",
                        "type": "integer",
                        "enum": [
                            1,
                            2
                        ],
                        "example": 1
                    },
                    "items": {
                        "description": "Array of order items",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderItem"
                        }
                    }
                },
                "type": "object"
            },
            "GetRecentOrdersRequest": {
                "description": "Request parameters for getting recent orders",
                "required": [
                    "limit"
                ],
                "properties": {
                    "limit": {
                        "description": "Maximum number of orders to return",
                        "type": "integer",
                        "maximum": 1000,
                        "minimum": 1,
                        "example": 5
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Orders",
            "description": "Order management endpoints"
        }
    ],
    "info": {
        "title": "Order Management API",
        "description": "API for creating and managing orders",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Local development server"
        }
    ]
}