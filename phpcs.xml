<?xml version="1.0"?>
<ruleset name="Symfony Cursor Project">
    <description>PHP CodeSniffer configuration for PSR-12 Extended Coding Style Guide</description>

    <!-- Use PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Line length: 120 characters (PSR-12 Extended) -->
    <!-- Note: Line length violations are warnings but are treated as errors by Makefile -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show colors -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>

